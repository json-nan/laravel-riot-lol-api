{
    "name": "json-nan/laravel-riot-lol-api",
    "description": "Package to facilitate the connection with the Riot Games API in LOL",
    "keywords": [
        "JsonNaN",
        "Riot Games",
        "LOL",
        "API",
        "laravel",
        "laravel-riot-lol-api"
    ],
    "homepage": "https://github.com/json-nan/laravel-riot-lol-api",
    "license": "MIT",
    "authors": [
        {
            "name": "JsonNaN",
            "email": "jasson_alex99@hotmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/contracts": "^10.0",
        "spatie/laravel-package-tools": "^1.14.0"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^7.8",
        "larastan/larastan": "^2.0.1",
        "orchestra/testbench": "^8.8",
        "pestphp/pest": "^2.20",
        "pestphp/pest-plugin-arch": "^2.5",
        "pestphp/pest-plugin-laravel": "^2.0",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "JsonNaN\\LaravelRiotLolApi\\": "src/",
            "JsonNaN\\LaravelRiotLolApi\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "JsonNaN\\LaravelRiotLolApi\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "clear": "@php vendor/bin/testbench package:purge-laravel-riot-lol-api --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": [
            "@composer run prepare",
            "@php vendor/bin/testbench workbench:build --ansi"
        ],
        "start": [
            "Composer\\Config::disableProcessTimeout",
            "@composer run build",
            "@php vendor/bin/testbench serve"
        ],
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "JsonNaN\\LaravelRiotLolApi\\LaravelRiotLolApiServiceProvider"
            ],
            "aliases": {
                "LaravelRiotLolApi": "JsonNaN\\LaravelRiotLolApi\\Facades\\LaravelRiotLolApi"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
